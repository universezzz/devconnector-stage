    "bcryptjs": "^2.4.3",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "express-validator": "^6.5.0",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.16",
    "node-mocks-http": "^1.9.0",
    "request": "^2.88.2",
    "uuid": "^8.2.0"
